                     , certificate >= 1.3
                     , case-insensitive >= 0.4 && < 0.5
                     , hxt >= 9.2 && < 9.4
                     , hxt-xpath >= 9.1 && < 9.2
                     , pretty >= 1.1 && < 1.2
                     , resourcet >= 0.4 && < 0.5
                     , transformers >= 0.3 && < 0.4
                     , network
  HS-Source-Dirs:      src
  ghc-options:         -Wall
